<installation version="1.0">
	<info>
		<appname>jTwittArd</appname>
		<appversion>1.0</appversion>
		<url>https://github.com/jagedn/jTwittArd</url>
		<authors>
			<author name="PuraVida Software" email="administracion@puravida-software.com" />
		</authors>
	</info>

	<guiprefs width="800" height="600" resizable="no">
		<splash>images/peas_load.gif</splash>
		<laf name="substance">
			<os family="windows" />
			<os family="unix" />
			<param name="variant" value="mist-silver" />
		</laf>
		<laf name="substance">
			<os family="mac" />
			<param name="variant" value="mist-aqua" />
		</laf>
		<modifier key="useHeadingPanel" value="yes" />
	</guiprefs>

	<resources>
		<res id="userInputSpec.xml" src="hashtag_input_spec.xml" parse="yes"
			type="xml" />
		<res id="LicencePanel.licence" src="gpl.txt" />
	</resources>

	<locale>
		<langpack iso3="spa" />
	</locale>

	<panels>
		<panel classname="HelloPanel" />
		<panel classname="LicencePanel" />
		<panel classname="TargetPanel" />
		<panel classname="UserInputPanel" id="panelHashtags" />
		<panel classname="InstallPanel" />
		<panel classname="FinishPanel" />
	</panels>

	<variables>
		<variable name="app-version" value="1.4" />
		<variable name="released-on" value="08/03/2002" />
	</variables>

	<packs>
		<pack name="ejecutables" required="yes">
			<description>Jar Libs</description>
			<fileset dir=".." targetdir="${INSTALL_PATH}">
				<include name="*-shaded.jar" />
			</fileset>
			<file src="jtwittard.properties" targetdir="${INSTALL_PATH}" />
			<parsable encoding="UTF-8" targetfile="${INSTALL_PATH}/jtwittard.properties"
				type="javaprop" />
		</pack>
	</packs>
</installation>